@model UserViewModel

@{
    ViewData["Title"] = "Random Winner";


}

<center>
<div class="card shadow mb-5">
	<div class="card-body">
		<dl class="dl-horizontal">
			<dt>
				<u>Winner</u>
			</dt>
			<dt style="font-size:80px;">
				<b>@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</b>
			</dt>
			<dt>
				Email: @Html.DisplayFor(model => model.Email)
			</dt>
			<dt>
				Grade: @Html.DisplayFor(model => model.Grade)
			</dt>
			<dt>
				Points: @Html.DisplayFor(model => model.Points)
			</dt>
		</dl>
		<a asp-action="Random" class="btn btn-primary d-none d-sm-inline-block">
			<svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line></svg>
			Re-Roll
		</a>
	</div>
		
	
</div>
</center>